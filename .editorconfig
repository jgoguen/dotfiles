root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

[*.lua]
max_line_length = 120

[*.yaml]
indent_style = space
max_line_length = 120
