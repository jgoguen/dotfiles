# Detect CPU count
CPU_COUNT=0
if command -v nproc >/dev/null 2>&1 ; then
	CPU_COUNT="$(command nproc)"
elif sysctl -n hw.ncpu >/dev/null 2>&1 ; then
	CPU_COUNT="$(sysctl -n hw.ncpu)"
fi
if [ "${CPU_COUNT}" -gt 1 ]; then
	export MAKEFLAGS="-j$(( CPU_COUNT - 1 ))"
fi
