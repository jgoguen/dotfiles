# vim: set filetype=zsh:
# Do not edit this file directly! It is managed by chezmoi.

alias egrep="grep -E --color=auto"
alias fgrep="grep -F --color=auto"
alias pgrep="pgrep -fl"

alias find="find -L"

alias focusfix='printf "\e[?1004l"'

alias less="less -FRXd"
alias sort="LC_ALL=C sort"

{{ if eq .chezmoi.os "darwin" -}}
alias flushdns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
{{- end }}

if (( ${+commands[python3]} )); then
	alias urldecode="${commands[python3]} -c 'import sys, urllib.parse as ul; print(ul.unquote_plus(sys.argv[1]))'"
	alias urlencode="${commands[python3]} -c 'import sys, urllib.parse as ul; print(ul.quote_plus(sys.argv[1]))'"
fi

{{ if eq .chezmoi.os "linux" -}}
if (( ${+commands[gio]} )); then
	alias open="${commands[gio]} open"
elif (( ${+commands[xdg-open]} )); then
	alias open="${commands[xdg-open]}"
fi

if (( ${+commands[wl-copy]} )); then
	alias pbcopy="${commands[wl-copy]} --trim-newline"
	alias pbpaste="${commands[wl-paste]} --no-newline"
elif (( ${+commands[xclip]} )); then
	alias pbcopy="${commands[xclip]} -selection clipboard"
	alias pbpaste="${commands[xclip]} -selection clipboard -o"
fi
{{- end }}

if (( ${+commands[bat]} )); then
	alias cat="${commands[bat]}"
fi

if (( ${+commands[lsd]} )); then
	alias ls="${commands[lsd]}"
	if (( ! ${+commands[tree]} )); then
		alias tree="${commands[lsd]} --tree"
	fi
else
{{- if eq .chezmoi.os "linux" }}
	alias ls="ls --color=auto -Fh"
{{- else }}
	alias ls="ls -Fh"
{{- end }}
fi

if [ -f "${HOME}/.zaliases.local" ]; then
	. "${HOME}/.zaliases.local"
fi
