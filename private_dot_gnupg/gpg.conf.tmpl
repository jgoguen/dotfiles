# Do not edit this file directly! It is managed by chezmoi.

# Try to use the GnuPG-Agent. With this option, GnuPG first tries to connect to
# the agent before it asks for a passphrase.
use-agent

personal-compress-preferences BZIP2 ZLIB ZIP Uncompressed
personal-digest-preferences SHA512 SHA384 SHA256 SHA224
personal-cipher-preferences AES256 AES192 AES
cert-digest-algo SHA512
s2k-cipher-algo AES256
s2k-digest-algo SHA512
default-preference-list SHA512 SHA384 SHA256 SHA224 AES256 AES192 AES BZIP2 ZLIB ZIP Uncompressed

default-key 0x{{ .gpgkey }}
default-recipient-self
keyid-format 0xlong
with-fingerprint
fixed-list-mode

#no-escape-from-lines
no-emit-version
no-comments
no-greeting

require-cross-certification
charset utf-8
display-charset utf-8
no-mangle-dos-filenames

# Display the calculated validity of user IDs during key listings
list-options show-uid-validity
verify-options show-uid-validity

#keyserver
keyserver hkp://hkps.pool.sks-keyservers.net
keyserver-options no-honor-keyserver-url include-revoked import-clean export-clean auto-key-retrieve
import-options import-clean
auto-key-locate keyserver

utf8-strings
