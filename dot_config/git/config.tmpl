[alias]
	amend = commit --amend -a --no-edit
	branches = branch -a -l
	delete-local = !git branch --merged | egrep -v \"(^\\*|master|main)\" | xargs git branch -d
	discard = reset --hard HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	remotes = remote -v
	smartlog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''            %C(white)%s%C(reset) %C(dim white)- %an <%aE>%C(reset)'
	sl = smartlog

[apply]
	whitespace = fix

[blame]
	date = iso-local

[branch]
	autosetuprebase = always
	autosetupmerge = true

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[column]
	ui = auto

[core]
	editor = nvim
	eol = lf
	quotePath = true
	untrackedCache = true
	whitespace = fix,-cr-at-eol,-indent-with-non-tab,space-before-tab,-tab-in-indent,trailing-space

[diff]
	algorithm = patience
	noprefix = true
	renames = copies

[fetch]
	prune = true
	recurseSubmodules = on-demand

[format]
	graph = true

[gc]
	auto = 1

[github]
	user = {{ (onepasswordDetailsFields "yaim2h545jdgdfvlepphtyql3i").username.value }}
	token = {{ (onepasswordItemFields "yaim2h545jdgdfvlepphtyql3i").jgoguen.value }}

[gpg "openpgp"]
{{- if eq .chezmoi.os "darwin" }}
	program = /usr/local/bin/gpg
{{- else }}
	program = /usr/bin/gpg2
{{- end }}

[grep]
	lineNumber = true
	patternType = perl

[help]
	autocorrect = 1

[i18n]
	commitEncoding = utf-8
	logOutputEncoding = utf-8

[init]
	defaultBranch = main

[log]
	abbrev-commit = true
	date = iso-local
	decorate = auto

[merge]
	conflictstyle = diff3
	status = true
	summary = true

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = simple
	gpgSign = if-asked

[rebase]
	autosquash = true
	autostash = true

[stash]
	showPatch = true

[status]
	showStash = true
	submoduleSummary = true

[include]
	path = ~/.config/git/config.local
